<main>
        <h1 class="contacto__titulo">Editar Producto<hr></h1>
        <section class="principal__contacto2">
            <form class="contacto__form" action="/editar/{{product._id}}" method="post" >

                <label for="nombre">Nombre del producto</label>
                <input type="text" id="nombreProducto" class="inputPadron" name="name" placeholder="Nombre Producto" value="{{product.name}}" required>

                <label for="precio">Precio</label>
                <input type="number" id="precio" class="inputPadron" name="price" placeholder="$0.00" value="{{product.price}}" required >

                

                <label for="descripcion">Descripci√≥n</label>
                <input type="text" id="descripcion" class="inputPadron" name="description" placeholder="Descripcion del producto" value="{{product.description}}" required >

                <label for="descripcion">Imagen</label>
                <input type="text" id="descripcion" class="inputPadron" name="imageUrl" placeholder="agregue el url de la imagen del producto" value="{{product.imageUrl}}" required >
                

                <input type="submit" value="Actualizar Producto" id="enviar" class="enviar">            


            </form>
        </section>
    </main>  